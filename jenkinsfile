pipeline{
    agent any
    stages{
        stage("Build"){
            steps{
                echo "Building ..."
            }
            post{
                always{
                    mail to: "sebastianedge50@gmail.com",
                    subject: "Build Status Email",
                    body: "Build was Successful!"
                    
                }
            }
        }
    stage("Test"){
        steps{
          echo "Testing ..."
        }
    }
    Stage("Deploy"){
        steps{
          echo "Deploying ..."
        }
      }
   }
}
